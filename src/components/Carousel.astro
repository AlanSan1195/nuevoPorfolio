---

<div
    id="carousel"
    class="relative w-[170px] md:w-[380px] lg:w-[500px]   md:mt-11 lg:mt-4 bg-slate-50 md:h-64 rounded-lg md:mr-5 "
    data-carousel="slide"
  >
    <!-- Carousel wrapper -->
    <div
      class="relative h-full md:h-64 lg:h-72 overflow-hidden rounded-lg bg-slate-800"
    >
      <!-- Item 1 -->
      <div class=" duration-700 ease-in-out" id="carousel-item-1">
        <a href="evidencias/evidencia1.webp" target="_blank">
          <img
            src="evidencias/evidencia1.webp"
            class="absolute  object-cover block  h-full w-full speia-effect "
            alt=" evidencias de mis proyectos"
            
          />
        </a>
      </div>
      <!-- Item 2 -->
      <div class=" hidden duration-700 ease-in-out" id="carousel-item-2">
        <a href="evidencias/evidencia2.webp" target="_blank">
          <img
            src="evidencias/evidencia2-suitch.webp"
            class="absolute block object-cover h-full w-full speia-effect "
            alt=" evidencias de mis proyectos 2"
            
          />
        </a>
      </div>
      <!-- item 3 -->
      <div class=" hidden duration-700 ease-in-out" id="carousel-item-2">
        <a href="evidencias/evidencia3.webp" target="_blank">
          <img
            src="evidencias/evidencia3-suitch.webp"
            class="absolute block object-cover h-full w-full speia-effect "
            alt=" evidencias de mis proyectos 3"
            
          />
        </a>
      </div>
      <!-- item 4  -->
      <div class=" hidden duration-700 ease-in-out" id="carousel-item-2">
        <a href="evidencias/evidencia4.webp" target="_blank">
          <img
            src="evidencias/evidencia4-suitch.webp"
            class="absolute block object-cover h-full w-full speia-effect "
            alt=" evidencias de mis proyectos 4"
            
          />
        </a>
      </div>
    </div>
    <!-- Slider controls -->
    <button
      id="prev"
      type="button"
      class="absolute   top-[200px] md:top-0 start-0 z-30 flex items-center justify-center h-full px-7 cursor-pointer group focus:outline-none hover:scale-110"
    >
      <span
        class="inline-flex items-center justify-center w-10 h-10 rounded-full md:bg-white/70 md:group-hover:bg-white/90 md:border-none border-2 border-white/50 shadow-xl"
      >
        <svg
          class="w-4 h-4 text-white/50 md:text-black rtl:rotate-180"
          aria-hidden="true"
          xmlns="http://www.w3.org/2000/svg"
          fill="none"
          viewBox="0 0 6 10"
        >
          <path
            stroke="currentColor"
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M5 1 1 5l4 4"></path>
        </svg>
        <span class="sr-only">Previous</span>
      </span>
    </button>
    <button
      id="next"
      type="button"
      class="absolute top-[200px] md:top-0 end-0 z-30 flex items-center justify-center h-full px-7 cursor-pointer group focus:outline-none hover:scale-110"
    >
      <span
        class="inline-flex items-center justify-center w-10 h-10 rounded-full md:bg-white/70 md:group-hover:bg-white/90 md:border-none border-2 border-white/50 shadow-lg"
      >
        <svg
          class="w-4 h-4  text-white/50 md:text-black rtl:rotate-180 shadow-xl"
          aria-hidden="true"
          xmlns="http://www.w3.org/2000/svg"
          fill="none"
          viewBox="0 0 6 10"
        >
          <path
            stroke="currentColor"
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="m1 9 4-4-4-4"></path>
        </svg>
        <span class="sr-only">Next</span>
      </span>
    </button>

      <Skills />

  </div>


<script>
 document.addEventListener("DOMContentLoaded", function () {
    const $carousel = document.getElementById("carousel");

    if (!$carousel) return; // Asegúrate de que el carrusel exista antes de continuar

    const $carouselItems = Array.from($carousel.querySelectorAll('[id^="carousel-item-"]'));
    const $prevButton = document.getElementById("prev");
    const $nextButton = document.getElementById("next");

    let actualFoto = 0; // Inicia en el primer elemento

    // Función para mostrar el elemento actual y ocultar los demás
    const showSlide = (index: any) => {   
      $carouselItems.forEach((item, i) => {
        if (i === index) {
          item.classList.remove("hidden");
        } else {
          item.classList.add("hidden");
        }
      });
    };

    $prevButton?.addEventListener("click", () => {
      actualFoto = (actualFoto - 1 + $carouselItems.length) % $carouselItems.length; // Calcula el índice del elemento anterior
      showSlide(actualFoto); // Muestra el elemento anterior
    });

    // Asegúrate de que se muestra el primer elemento al cargar la página
    showSlide(actualFoto);

    $nextButton?.addEventListener("click", ()=>{
      actualFoto = (actualFoto + 1) % $carouselItems.length; // Calcula el índice del siguiente elemento
      showSlide(actualFoto); // Muestra el siguiente elemento
    })
  });
</script>
