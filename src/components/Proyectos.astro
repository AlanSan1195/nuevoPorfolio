---

<div class="mt-14 md:mt-18 lg:mt-24 flex justify-center mr-3 opacity-75">
  <h1
    class="font-rdr text-6xl md:text-8xl lg:text-[100px] flex md:mx-auto ml-3 md:justify-center text-secundary font-bold"
  >
    Proyectos
  </h1>
</div>

<div
  class="flex flex-col gap-y-12  w-[350px] md:w-[800px] lg:w-[1000px] mt-4 md:mt-10 lg:mt-14 mx-auto"
>
  {
    PROJECTS.map(({ image, title, description, tags, link, github, demo }) => (
      <article class="flex flex-col space-y-2 md:gap-x-4 group md:flex-row md:content-center md:items-center sm:mx-auto  md:space-y-0 text-pretty ">
        <div class="  ">
          <img
            alt="imagen de mis proyectos"
            class=" w-full sm:h-full flex justify-center items-center content-normal speia-effect"
            loading="lazy"
            src={image}
          />
        </div>

        <div class="w-full md:w-1/2 md:max-w-lg">
          <h3 class="text-xl md:text-3xl font-rocks text-secundary font-semibold  ">
            {title}
          </h3>
          <div class="flex flex-wrap mt-2">
            <ul class="flex flex-row mb-2 gap-x-2 items-center ">
              {tags.map((tag) => (
                <li class="">
                  <span
                    class={`flex gap-x-2 rounded-full text-xs  font-rocks items-center ${tag.class} py-1 px-2 `}
                  >
                    <img
                      class="size-10"
                      src="/imagenes/revolver-logo.webp"
                      alt="Revolver Logo"
                    />
                    {tag.name}
                  </span>
                </li>
              ))}
            </ul>

            <div class="mt-2 text-secundary font-old text-lg leading-none text-pretty  md:text-xl lg:text-2xl opacity-65">
              {description}
            </div>
            <footer class="flex items-end justify-start mt-4 gap-x-4 font-rocks text-xs text-secundary">
              {github && (
                <LinkButton href={github}>
                  <Githubicon class="size-6 " />
                  <p class="opacity-75">Code</p>
                </LinkButton>
              )}
              {link && (
                <LinkButton href={link}>
                  <Wwwicon class="size-4" />
                  <p class="opacity-75">Preview</p>
                </LinkButton>
              )}

              {demo && (
                <LinkButton href={demo}>
                  <Demoicon class="size-6" />
                  <p class="opacity-75">Demo</p>
                </LinkButton>
              )}
            </footer>
          </div>
        </div>
      </article>
    ))
  }
</div>
