// hice esta iteracion de tags para experimentar con los iconos

const TAGS = {
  ASTRO: {
    name: "Astro",
    class: "    text-red-800 ",
    icon: Astroicon,
  },
  TAILWIND: {
    name: "Tailwind",
    class: " text-red-800",
    icon: Tailwindicon,
  },
  JAVASCRIPT: {
